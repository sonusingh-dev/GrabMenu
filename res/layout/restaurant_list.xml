<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TableLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:stretchColumns="0" android:padding="7px">
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="Nearby" style="@style/lbl_title" android:id="@+id/lblTitle"/>
			<Button android:text="Refine"
				style="@style/btn_gray" android:id="@+id/btnRefineList"/>
		</TableRow>
	</TableLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:padding="5px" android:background="@color/ltwhite">
		<TextView android:text="@string/sort_by" style="@style/lbl_msg"/>
		<Spinner android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:prompt="@string/sort_by" android:id="@+id/spnSortBy"/>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="@color/white">
		<ListView android:id="@android:id/list" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>

