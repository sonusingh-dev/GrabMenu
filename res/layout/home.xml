<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainLayout" android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:gravity="center_horizontal">
	<TableLayout android:layout_width="match_parent"
		android:layout_height="wrap_content" android:stretchColumns="1"
		android:padding="7px">
		<TableRow android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<Button android:text="Cities" style="@style/btn_gray"
				android:id="@+id/btnCities" />
			<TextView android:text="Select City" style="@style/lbl_title"
				android:id="@+id/lblCity" />
		</TableRow>
	</TableLayout>
	<LinearLayout android:layout_height="match_parent"
		android:orientation="vertical" android:layout_width="match_parent"
		android:background="@color/white" android:padding="5px">
		<ImageView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center"
			android:src="@drawable/logo" android:id="@+id/imgHome" />
		<TableLayout android:layout_width="match_parent"
			android:stretchColumns="1" android:layout_height="match_parent"
			android:layout_weight="1" android:gravity="center">
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="What ?" style="@style/lbl_wh" />
				<EditText android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:focusable="false"
					android:id="@+id/txtWhat" android:hint="eg., Greek, Tacos, Alice's" />
			</TableRow>
			<TableRow android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView android:text="Where ?" style="@style/lbl_wh" />
				<EditText android:layout_height="wrap_content"
					android:hint="Localities, Area, City" android:layout_width="wrap_content"
					android:focusable="false" android:id="@+id/txtWhere" />
			</TableRow>
		</TableLayout>
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:padding="40px">
			<Button android:text="Send Feedback" style="@style/btn_link"
				android:id="@+id/btnFeedback"></Button>
			<TextView android:text=" | " android:id="@+id/textView2"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<Button android:text="About" style="@style/btn_link"
				android:id="@+id/btnAbout"></Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
