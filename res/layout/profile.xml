<?xml version="1.0" encoding="UTF-8"?>
<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<TextView android:text="Restaurant Name" style="@style/lbl_profile"></TextView>
			<TableLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:stretchColumns="1">
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:text="Price" style="@style/lbl_data_2"
						android:id="@+id/lblPrice"></TextView>
					<TextView android:text="Cuisines" style="@style/lbl_data_2"
						android:id="@+id/lblCuisines"></TextView>
				</TableRow>
			</TableLayout>
			<TextView style="@style/lbl_data_2" android:text="Addr"
				android:id="@+id/lblAddr"></TextView>
			<TextView style="@style/lbl_data_2" android:text="Near By"
				android:id="@+id/lblNearBy"></TextView>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TextView android:text="User Ratings"
				style="@style/lbl_profile" />
			<TableLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:stretchColumns="1">
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:padding="10px">
					<RatingBar style="@style/rating_bar_small" android:id="@+id/ratingBar" />
					<TextView style="@style/lbl_data" android:id="@+id/lblReviews"
						android:text="Number of Reviews"></TextView>
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="match_parent">
			<TextView android:text="Other Restaurant Info"
				style="@style/lbl_profile" />
			<TableLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:stretchColumns="1">
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:text="Hours" style="@style/lbl_data"></TextView>
					<TextView android:text="Cuisines" style="@style/lbl_data"
						android:id="@+id/lblHours"></TextView>
				</TableRow>
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:text="Meal" style="@style/lbl_data"></TextView>
					<TextView android:text="Cuisines" style="@style/lbl_data"
						android:id="@+id/lblMeal"></TextView>
				</TableRow>
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:text="Features" style="@style/lbl_data"></TextView>
					<TextView android:text="Cuisines" style="@style/lbl_data"
						android:id="@+id/lblFeatures"></TextView>
				</TableRow>
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:text="Notes" style="@style/lbl_data"></TextView>
					<TextView android:text="Cuisines" style="@style/lbl_data"
						android:id="@+id/lblNotes"></TextView>
				</TableRow>
				<TableRow android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<TextView android:text="Website" style="@style/lbl_data"></TextView>
					<TextView android:text="Cuisines" style="@style/lbl_data"
						android:id="@+id/lblWebsite" android:inputType="textUri"></TextView>
				</TableRow>
			</TableLayout>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="5px">
			<Button android:text="Call"
				style="@style/btn_blue" android:id="@+id/btnCall"></Button>
		</LinearLayout>
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:padding="5px">
			<Button style="@style/btn_blue"
				android:text="Add to Favorites" android:id="@+id/btnAddToFavorites"></Button>
		</LinearLayout>
	</LinearLayout>
</ScrollView>