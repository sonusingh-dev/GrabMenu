<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<TextView android:text="City" style="@style/lbl_common"
		android:gravity="center" android:id="@+id/lblCity" />
	<TableLayout android:id="@+id/tableLayout2"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:background="@color/white" android:padding="5px"
		android:stretchColumns="0">
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="Restaurant" android:id="@+id/lblRestaurant"
				style="@style/lbl_name" android:maxLength="35"/>
			<RatingBar style="@style/rating_bar_small" android:id="@+id/ratingBar" />
		</TableRow>
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="Cuisines" style="@style/lbl_data_2"
				android:id="@+id/lblCuisines" android:maxLength="35"/>
			<TextView android:gravity="right" android:text="Reviews"
				style="@style/lbl_data_2" android:id="@+id/lblReview" />
		</TableRow>
		<TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="Location" style="@style/lbl_data_2"
				android:id="@+id/lblLocation" android:maxLength="35"/>
			<TextView android:gravity="right" android:text="Price"
				style="@style/lbl_data_2" android:id="@+id/lblPrice" />
		</TableRow>
	</TableLayout>
</LinearLayout>		